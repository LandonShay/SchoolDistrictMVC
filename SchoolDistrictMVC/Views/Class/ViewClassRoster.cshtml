@model IEnumerable<SchoolDistrictMVC.Models.Class.ClassRoster>

@{ ViewBag.Title = "ViewClassRoster"; }

<h2>@ViewBag.Class</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Teacher)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Teacher)
    </td>
</tr>
}

</table>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.StudentId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Student)
    </td>
    <td>
        
        @Html.ActionLink("Remove From Class", "RemoveFromClass", new { id = item.Id })
    </td>

</tr>}

</table>

<div>
    @Html.ActionLink("Back to Class List", "Index")
</div>
